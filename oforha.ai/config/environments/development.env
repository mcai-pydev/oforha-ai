# Development Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=development
API_VERSION=v1
API_PREFIX=/api/v1
API_RATE_LIMIT=1000
API_TIMEOUT=60000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/oforha_dev
MONGODB_USER=dev_user
MONGODB_PASSWORD=dev_password
MONGODB_AUTH_SOURCE=admin

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_password
REDIS_DB=0
REDIS_TLS=false

# OpenAI Configuration
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.8
OPENAI_TIMEOUT=60000

# JWT Configuration
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration
EMAIL_FROM=dev@oforha.ai
EMAIL_FROM_NAME=Oforha AI (Dev)
EMAIL_BATCH_SIZE=10

# AI Service Configuration
AI_SERVICE_URL=http://localhost:5001
AI_RESPONSE_TIMEOUT=60000
AI_BATCH_SIZE=5
AI_CONCURRENT_REQUESTS=2

# Learning Platform Configuration
COURSE_STORAGE_PATH=./data/courses
MAX_UPLOAD_SIZE=5242880
COURSE_BACKUP_ENABLED=false
COURSE_VERSION_CONTROL=true
COURSE_PREVIEW_ENABLED=true

# Monitoring Configuration
LOG_LEVEL=debug
LOG_FORMAT=dev
ENABLE_METRICS=true
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Security Configuration
CORS_ORIGIN=http://localhost:3000
ENABLE_HTTPS=false
SECURITY_HEADERS_ENABLED=false
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=10
LOGIN_LOCKOUT_DURATION=300

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_COURSE_CREATION=true
ENABLE_USER_REGISTRATION=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_PAYMENT_INTEGRATION=false
ENABLE_VIDEO_STREAMING=true
ENABLE_LIVE_CODING=true
ENABLE_PROJECT_SHARING=true
ENABLE_TEAM_COLLABORATION=true
ENABLE_GAMIFICATION=true
ENABLE_ACHIEVEMENTS=true
ENABLE_LEADERBOARD=true
ENABLE_BADGES=true

# Cache Configuration
CACHE_TTL=60
CACHE_STRATEGY=memory
CACHE_COMPRESSION=false

# Development Tools
ENABLE_SWAGGER=true
ENABLE_DEBUG_TOOLS=true
ENABLE_TEST_ROUTES=true
ENABLE_DEV_CONSOLE=true
ENABLE_API_DOCS=true
ENABLE_MOCK_DATA=true
ENABLE_TEST_EMAILS=true
ENABLE_TEST_PAYMENTS=true
ENABLE_TEST_NOTIFICATIONS=true

# Performance Tuning
MAX_CONNECTIONS=50
WORKER_THREADS=2
ENABLE_COMPRESSION=false
ENABLE_CACHING=false
ENABLE_CDN=false
ENABLE_IMAGE_OPTIMIZATION=false
ENABLE_LAZY_LOADING=false
ENABLE_CODE_SPLITTING=false
ENABLE_TREE_SHAKING=false
ENABLE_MINIFICATION=false 