# Production Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=production
API_VERSION=v1
API_PREFIX=/api/v1
API_RATE_LIMIT=100
API_TIMEOUT=30000

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/oforha
MONGODB_USER=oforha_admin
MONGODB_PASSWORD=your_secure_password_here
MONGODB_AUTH_SOURCE=admin
MONGODB_REPLICA_SET=rs0
MONGODB_RETRY_WRITES=true
MONGODB_WRITE_CONCERN=majority

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_TLS=true
REDIS_MAX_RETRIES=3
REDIS_CONNECT_TIMEOUT=10000

# OpenAI Configuration
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_FREQUENCY_PENALTY=0
OPENAI_PRESENCE_PENALTY=0
OPENAI_STOP_SEQUENCES=["\n\n"]
OPENAI_TIMEOUT=30000
OPENAI_RETRY_COUNT=3

# JWT Configuration
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256
JWT_ISSUER=oforha.ai
JWT_AUDIENCE=oforha.ai

# Email Configuration
EMAIL_FROM=noreply@oforha.ai
EMAIL_FROM_NAME=Oforha AI
EMAIL_TEMPLATE_ID=your_template_id
EMAIL_BATCH_SIZE=100
EMAIL_RETRY_DELAY=5000
EMAIL_MAX_RETRIES=3

# AI Service Configuration
AI_SERVICE_URL=http://ai-service:5001
AI_RESPONSE_TIMEOUT=30000
AI_BATCH_SIZE=10
AI_CONCURRENT_REQUESTS=5
AI_ERROR_THRESHOLD=0.1
AI_FALLBACK_ENABLED=true
AI_FALLBACK_MODEL=gpt-3.5-turbo

# Learning Platform Configuration
COURSE_STORAGE_PATH=/data/courses
MAX_UPLOAD_SIZE=10485760
COURSE_BACKUP_ENABLED=true
COURSE_BACKUP_FREQUENCY=daily
COURSE_VERSION_CONTROL=true
COURSE_PREVIEW_ENABLED=false
COURSE_ANALYTICS_ENABLED=true
COURSE_PROGRESS_TRACKING=true
COURSE_CERTIFICATE_ENABLED=true

# Monitoring Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_ROTATION=true
LOG_MAX_SIZE=100m
LOG_MAX_FILES=10
LOG_COMPRESSION=true
ENABLE_METRICS=true
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Security Configuration
CORS_ORIGIN=https://oforha.ai
ENABLE_HTTPS=true
SECURITY_HEADERS_ENABLED=true
XSS_PROTECTION=true
CSRF_PROTECTION=true
HSTS_ENABLED=true
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=1800

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_COURSE_CREATION=true
ENABLE_USER_REGISTRATION=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_PAYMENT_INTEGRATION=true
ENABLE_VIDEO_STREAMING=true
ENABLE_LIVE_CODING=true
ENABLE_PROJECT_SHARING=true
ENABLE_TEAM_COLLABORATION=true
ENABLE_GAMIFICATION=true
ENABLE_ACHIEVEMENTS=true
ENABLE_LEADERBOARD=true
ENABLE_BADGES=true

# Cache Configuration
CACHE_TTL=3600
CACHE_STRATEGY=redis
CACHE_COMPRESSION=true
CACHE_MAX_SIZE=1gb
CACHE_CLEANUP_INTERVAL=3600
CACHE_STALE_WHILE_REVALIDATE=true
CACHE_UPDATE_INTERVAL=300

# Development Tools
ENABLE_SWAGGER=false
ENABLE_DEBUG_TOOLS=false
ENABLE_TEST_ROUTES=false
ENABLE_DEV_CONSOLE=false
ENABLE_API_DOCS=false
ENABLE_MOCK_DATA=false
ENABLE_TEST_EMAILS=false
ENABLE_TEST_PAYMENTS=false
ENABLE_TEST_NOTIFICATIONS=false

# Performance Tuning
MAX_CONNECTIONS=100
WORKER_THREADS=4
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
ENABLE_CDN=true
CDN_URL=https://cdn.oforha.ai
ENABLE_IMAGE_OPTIMIZATION=true
IMAGE_QUALITY=80
MAX_IMAGE_SIZE=2048
ENABLE_LAZY_LOADING=true
ENABLE_CODE_SPLITTING=true
ENABLE_TREE_SHAKING=true
ENABLE_MINIFICATION=true 