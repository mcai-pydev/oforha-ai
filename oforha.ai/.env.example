# Server Configuration
PORT=5000
NODE_ENV=development
API_VERSION=v1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/oforha
MONGODB_USER=your_mongodb_user
MONGODB_PASSWORD=your_mongodb_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# JWT Configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@oforha.ai
EMAIL_FROM_NAME=Oforha AI

# AI Service Configuration
AI_SERVICE_URL=http://localhost:5001
AI_SERVICE_API_KEY=your_ai_service_api_key
AI_RESPONSE_TIMEOUT=30000
AI_MAX_RETRIES=3

# Learning Platform Configuration
COURSE_STORAGE_PATH=./data/courses
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,md,ipynb,py

# Monitoring Configuration
PROMETHEUS_MULTIPROC_DIR=./tmp
ENABLE_METRICS=true
LOG_LEVEL=info

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_HTTPS=false
SSL_CERT_PATH=./certs/oforha.crt
SSL_KEY_PATH=./certs/oforha.key

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_COURSE_CREATION=true
ENABLE_USER_REGISTRATION=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=oforha_

# Development Tools
ENABLE_SWAGGER=true
ENABLE_DEBUG_TOOLS=true
ENABLE_TEST_ROUTES=true

# External Services
GITHUB_API_KEY=your_github_api_key
LINKEDIN_API_KEY=your_linkedin_api_key
TWITTER_API_KEY=your_twitter_api_key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 0 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./data/backups

# Performance Tuning
MAX_CONNECTIONS=100
WORKER_THREADS=4
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6 